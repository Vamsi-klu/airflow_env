# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:job-alerts

# =============================================================================
# JSearch API (RapidAPI) - Primary Source
# Covers: LinkedIn, Indeed, Glassdoor, ZipRecruiter
# Get your key at: https://rapidapi.com/letscrape-6bRBa3QguO5/api/jsearch
# =============================================================================
RAPIDAPI_KEY=your_rapidapi_key_here

# =============================================================================
# Adzuna API - Secondary Source (Optional but recommended)
# Covers: Monster, CareerBuilder, SimplyHired
# Get your keys at: https://developer.adzuna.com/
# =============================================================================
ADZUNA_APP_ID=your_adzuna_app_id_here
ADZUNA_APP_KEY=your_adzuna_app_key_here

# =============================================================================
# RemoteOK - No API key needed (enabled by default)
# Set to "false" to disable
# =============================================================================
REMOTEOK_ENABLED=true
